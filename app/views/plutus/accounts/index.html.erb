<div class="container">
  <center>
    <h1><%= t('.title') %></h1>
    <br>
  </center>

<table class="table table-striped table-hover">
  <tr>
    <th><%= Plutus::Account.human_attribute_name(:name) %></th>
    <th><%= Plutus::Account.human_attribute_name(:type) %></th>
    <th><%= Plutus::Account.human_attribute_name(:credits_balance) %></th>
    <th><%= Plutus::Account.human_attribute_name(:debits_balance) %></th>
    <th><%= Plutus::Account.human_attribute_name(:balance) %></td>
  </tr>

<% @accounts.each do |account| %>
  <tr class="<%= cycle("even", "odd") -%>">
    <td><%=h account.name %></td>
    <td><%=h account.class.model_name.human %></td>
    <td><%=h account.credits_balance.round(2) %></td>
    <td><%=h account.debits_balance.round(2) %></td>
    <td><%=h account.balance.round(2) %></td>
  </tr>
<% end %>
</table>
</div>
